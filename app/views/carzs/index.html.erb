<p id="notice"><%= notice %></p>

<h1>Carzs</h1>

<table>
  <thead>
    <tr>
      <th>Mak</th>
      <th>Model</th>
      <th>Year</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @carzs.each do |carz| %>
      <tr>
        <td><%= carz.mak %></td>
        <td><%= carz.model %></td>
        <td><%= carz.year %></td>
        <td><%= link_to 'Show', carz %></td>
        <td><%= link_to 'Edit', edit_carz_path(carz) %></td>
        <td><%= link_to 'Destroy', carz, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

